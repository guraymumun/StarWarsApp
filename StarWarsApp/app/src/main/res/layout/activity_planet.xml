<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.starwarsapp.presentation.viewmodel.PlanetViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.activity.PlanetActivity">

        <TextView
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
            android:drawablePadding="@dimen/normal_margin"
            android:gravity="center_vertical"
            android:onClick="@{() -> viewModel.close()}"
            android:padding="@dimen/normal_margin"
            tools:text="Anakin Skywalker" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/person_name"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/homeworld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_margin"
            android:text="@{@string/homeworld(viewModel.planetModel.name)}"
            android:visibility="@{viewModel.progressVisible == true ? View.GONE : View.VISIBLE}"
            tools:text="Tattoine Temporary Homeworld" />

        <TextView
            android:id="@+id/gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeworld"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_margin"
            android:text="@{@string/gravity(viewModel.planetModel.gravity)}"
            android:visibility="@{viewModel.progressVisible == true ? View.GONE : View.VISIBLE}"
            tools:text="123123 standart" />

        <TextView
            android:id="@+id/terrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gravity"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_margin"
            android:text="@{@string/terrain(viewModel.planetModel.terrain)}"
            android:visibility="@{viewModel.progressVisible == true ? View.GONE : View.VISIBLE}"
            tools:text="desert" />

        <TextView
            android:id="@+id/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/terrain"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_margin"
            android:text="@{@string/population(viewModel.planetModel.population)}"
            android:visibility="@{viewModel.progressVisible == true ? View.GONE : View.VISIBLE}"
            tools:text="12300000" />

        <include
            android:id="@+id/progressLayout"
            app:isVisible="@{viewModel.progressVisible}"
            layout="@layout/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_name" />

    </RelativeLayout>
</layout>
